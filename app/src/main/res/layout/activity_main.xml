<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#297BA1"
    android:padding="20dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Student Data"
        android:textSize="50sp"
        android:textStyle="bold"
        android:textColor="#E87F7F"
        android:textAlignment="center"
        android:layout_marginTop="30dp">

    </TextView>

    <com.google.android.material.textfield.TextInputLayout
        style="out"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="#60B5DC">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/firstNameET"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#60B5DC"
            android:textSize="20sp"
            android:hint="First name"
            android:inputType="text">

        </com.google.android.material.textfield.TextInputEditText>

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        style="out"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="#60B5DC">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/lastNameET"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#60B5DC"
            android:textSize="20sp"
            android:hint="Last name"
            android:inputType="text">

        </com.google.android.material.textfield.TextInputEditText>

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        style="out"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="#60B5DC">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/rollNoET"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#60B5DC"
            android:hint="Roll no"
            android:textSize="20sp"
            android:inputType="text">

        </com.google.android.material.textfield.TextInputEditText>

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/saveBtn"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        app:cornerRadius="10dp"
        app:strokeWidth="2dp"
        android:textStyle="bold"
        android:textSize="30sp"
        android:textColor="#701711"
        app:strokeColor="#45081D"
        android:backgroundTint="#ADEBAF"
        android:layout_gravity="center"
        android:text="Save">

    </com.google.android.material.button.MaterialButton>

    <com.google.android.material.textfield.TextInputLayout
        style="out"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="#60B5DC">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/rollNoSearchET"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#60B5DC"
            android:hint="Search by Roll no"
            android:textSize="20sp"
            android:inputType="text">

        </com.google.android.material.textfield.TextInputEditText>

    </com.google.android.material.textfield.TextInputLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:gravity="center"
        android:orientation="horizontal">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/searchBtn"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            app:cornerRadius="10dp"
            app:strokeWidth="2dp"
            android:textSize="28sp"
            android:textColor="#701711"
            android:textStyle="bold"
            app:strokeColor="#45081D"
            android:backgroundTint="#ADEBAF"
            android:layout_gravity="center"
            android:text="Search">

        </com.google.android.material.button.MaterialButton>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/deleteallBtn"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            app:cornerRadius="10dp"
            app:strokeWidth="2dp"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="#701711"
            android:layout_marginLeft="20dp"
            app:strokeColor="#45081D"
            android:backgroundTint="#ADEBAF"
            android:layout_gravity="center"
            android:text="Delete All">

        </com.google.android.material.button.MaterialButton>

    </LinearLayout>




</LinearLayout>